{
  "name": "hono-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:debug": "bun --inspect src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "build:prod": "bun build src/index.ts --outdir dist --minify",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check . --write",
    "clear": "rm -rf node_modules && rm -rf dist && rm -rf bun.lockb",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bun run src/lib/db/migrate.ts",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-openapi": "latest",
    "@hono/zod-validator": "latest",
    "@neondatabase/serverless": "latest",
    "@scalar/hono-api-reference": "latest",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "drizzle-orm": "latest",
    "drizzle-zod": "latest",
    "hono": "latest",
    "hono-openapi": "latest",
    "i18next": "latest",
    "i18next-http-middleware": "latest",
    "pg": "latest",
    "pino": "latest",
    "pino-pretty": "latest",
    "postgres": "latest",
    "zod": "latest",
    "zod-openapi": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@types/pg": "latest",
    "bun-types": "latest",
    "drizzle-kit": "latest",
    "typescript": "latest"
  }
}
